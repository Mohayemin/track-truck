@{
    ViewBag.Title = "Clients";
}

<div ng-controller="clientController">
    <table class="table table-hover table-responsive table-bordered table-striped" ts-wrapper>
        <thead>
            <tr>
                <th ts-criteria="Name|lowercase">Name</th>
                <th ts-criteria="TrucksPerDay|parseInt">Trucks per day</th>
                <th ts-criteria="NumberOfBranches|parseInt">Branches</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="client in clients track by client.Id" ts-repeat>
                <td ng-bind="client.Name"></td>
                <td ng-bind="client.TrucksPerDay"></td>
                <td ng-bind="client.NumberOfBranches"></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript" src="~/Scripts/App/Client/clientService.js"></script>
<script type="text/javascript" src="~/Scripts/App/Client/clientController.js"></script>