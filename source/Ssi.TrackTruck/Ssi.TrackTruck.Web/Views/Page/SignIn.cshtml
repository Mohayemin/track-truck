@using System.Web.Optimization
<!DOCTYPE html>
<html ng-app="signInModule" ng-controller="signInController">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In: SSI Logistics</title>
</head>
<body>
    <link href="~/bin.client/css/all.css" rel="stylesheet" />

    <div class="container main-container">
        <global-message></global-message>

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("", "")">SSI Logistics</a>
                </div>
            </div>
        </nav>

        <div>
            <form class="form-horizontal" ng-submit="signIn()">

                <fieldset>
                    <legend class="text-center"> Sign In</legend>

                    <div class="col-md-offset-3 col-md-6">

                        <div class="form-group">
                            <input ng-model="model.Username" type="text" class="form-control" name="Username" placeholder="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <input ng-model="model.Password" type="password" class="form-control" name="Password" placeholder="Password">
                        </div>
                        <div class="form-group row">
                            <div class="checkbox col-xs-8">
                                <label>
                                    <input type="checkbox" ng-model="model.RememberMe"> Keep me signed in unless I sign out
                                </label>
                            </div>
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary pull-right">Sign In</button>
                            </div>
                        </div>

                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    @Html.Partial("_Footer")

    <script src="~/bin.client/lib.js"></script>
    <script src="~/bin.client/util.js"></script>
    <script src="~/bin.client/util.templates.js"></script>
    <script src="~/bin.client/signin.js"></script>
</body>
</html>