@{
    ViewBag.Title = "Sign In";
}


<script type="text/javascript" src="~/Scripts/SignIn/signinModule.js"></script>
<script type="text/javascript" src="~/Scripts/SignIn/signInService.js"></script>
<script type="text/javascript" src="~/Scripts/SignIn/signInController.js"></script>

<div ng-app="signInModule">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("", "")">SSI Logistics</a>
            </div>
        </div>
    </nav>

    <div ng-controller="signInController">
        <form class="form-horizontal" ng-submit="signIn()">

            <fieldset>
                <legend class="text-center"> Sign In</legend>

                <div class="col-md-offset-3 col-md-6">

                    <div class="form-group">
                        <input ng-model="model.Username" type="text" class="form-control" name="Username" placeholder="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <input ng-model="model.Password" type="password" class="form-control" name="Password" placeholder="Password">
                    </div>
                    <div class="form-group row">
                        <div class="checkbox col-xs-8">
                            <label>
                                <input type="checkbox" ng-model="model.RememberMe"> Keep me signed in unless I sign out
                            </label>
                        </div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary pull-right">Sign In</button>
                        </div>
                    </div>

                </div>
            </fieldset>
        </form>
    </div>
</div>
